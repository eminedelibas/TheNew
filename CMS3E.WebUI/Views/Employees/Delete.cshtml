@model CMS.Entity.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/img/@Model.Image" width="500">
        <div class="card-body" style="background-color:#dee2e6">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Title</p>
            <div style="display:flex;">
                <a class="icon icon-xs icon-darker icon-style-brand fa fa-linkedin" href="@Model.Linkedln" target="_blank"></a>
            </div>
        </div>
    </div>

    <form asp-controller="Employees" asp-action="Delete" style="margin-top:20px;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
