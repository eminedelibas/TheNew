@model CMS.Entity.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/img/@Model.Image" width="500">
        <div class="card-body" style="background-color:#dee2e6">
            <p class="card-text">@Model.Title</p>
            <p class="card-text">@Model.Text</p>
        </div>
    </div>

    <form asp-action="Delete" style="margin-top: 20px;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
